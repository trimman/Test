<core:View xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout"
	xmlns:fb="sap.ui.comp.filterbar" xmlns="sap.m" xmlns:table="sap.ui.table"
	xmlns:sap.ui.layout.form="sap.ui.layout.form" controllerName="SCV_test1.view.Master">

	<Page id="productListPage" title="{i18n&gt;masterTitle}"
		showNavButton="true" navButtonPress="onNavBack">
		<content>

			<Panel expandable="true" expanded="true">
				<headerToolbar>
					<Toolbar height="3rem">
						<Text text="Dane podstawowe" />
						<ToolbarSpacer />
						<!-- <Button icon="sap-icon://settings" /> <Button icon="sap-icon://drop-down-list" 
							/> -->
					</Toolbar>
				</headerToolbar>
				<content>
					<l:VerticalLayout width="100%">
						<Label text="FilterBar" />
						<fb:FilterBar showGoOnFB="false" showRestoreButton="false">
							<fb:filterItems>

								<fb:FilterItem name="A" label="Numer klienta"
									mandatory="true">
									<fb:control>
										<Input type="Text" />
									</fb:control>
								</fb:FilterItem>

								<fb:FilterItem name="B" label="Nazwa klienta 1">
									<fb:control>
										<Input type="Text" />
									</fb:control>
								</fb:FilterItem>

								<fb:FilterItem name="B" label="Nazwa klienta 2">
									<fb:control>
										<Input type="Text" />
									</fb:control>
								</fb:FilterItem>

								<fb:FilterItem name="B" label="NIP">
									<fb:control>
										<Input type="Text" />
									</fb:control>
								</fb:FilterItem>

							</fb:filterItems>
						</fb:FilterBar>
					</l:VerticalLayout>
				</content>
			</Panel>

			<Panel expandable="true" expanded="false">
				<headerToolbar>
					<Toolbar height="3rem">
						<Text text="Pełna nazwa klienta" />
						<ToolbarSpacer />
						<!-- <Button icon="sap-icon://settings" /> <Button icon="sap-icon://drop-down-list" 
							/> -->
					</Toolbar>
				</headerToolbar>
				<content>
					<l:VerticalLayout width="100%">
						<Label text="FilterBar" />
						<fb:FilterBar reset="onReset" search="onSearch"
							showRestoreOnFB="true" showClearOnFB="true" showRestoreButton="true"
							showClearButton="true">
							<fb:filterItems>

								<fb:FilterItem name="A" label="Nazwa klienta 1"
									mandatory="true">
									<fb:control>
										<Input type="Text" />
									</fb:control>
								</fb:FilterItem>

								<fb:FilterItem name="B" label="Nazwa klienta 2">
									<fb:control>
										<Input type="Text" />
									</fb:control>
								</fb:FilterItem>

								<fb:FilterItem name="B" label="Szukany ciąg znaków 1">
									<fb:control>
										<Input type="Text" />
									</fb:control>
								</fb:FilterItem>

							</fb:filterItems>
						</fb:FilterBar>
					</l:VerticalLayout>
				</content>
			</Panel>

			<Panel expandable="true" expanded="false">
				<headerToolbar>
					<Toolbar height="3rem">
						<Text text="Dane adresowe" />
						<ToolbarSpacer />
						<!-- <Button icon="sap-icon://settings" /> <Button icon="sap-icon://drop-down-list" 
							/> -->
					</Toolbar>
				</headerToolbar>
				<content>
					<l:VerticalLayout width="100%">
						<Label text="FilterBar" />
						<fb:FilterBar reset="onReset" search="onSearch"
							showRestoreOnFB="true" showClearOnFB="true" showRestoreButton="true"
							showClearButton="true">
							<fb:filterItems>

								<fb:FilterItem name="A" label="Miasto" mandatory="true">
									<fb:control>
										<Input type="Text" />
									</fb:control>
								</fb:FilterItem>

								<fb:FilterItem name="B" label="Ulica">
									<fb:control>
										<Input type="Text" />
									</fb:control>
								</fb:FilterItem>

								<fb:FilterItem name="B" label="Kod pocztowy">
									<fb:control>
										<Input type="Text" />
									</fb:control>
								</fb:FilterItem>

								<fb:FilterItem name="B" label="Województwo">
									<fb:control>
										<Input type="Text" />
									</fb:control>
								</fb:FilterItem>

								<fb:FilterItem name="B" label="Powiat">
									<fb:control>
										<Input type="Text" />
									</fb:control>
								</fb:FilterItem>

								<fb:FilterItem name="B" label="Kraj">
									<fb:control>
										<Input type="Text" />
									</fb:control>
								</fb:FilterItem>


							</fb:filterItems>
						</fb:FilterBar>
					</l:VerticalLayout>
				</content>
			</Panel>

			<Panel expandable="true" expanded="false">
				<headerToolbar>
					<Toolbar height="3rem">
						<Text text="Dane komunikacyjne" />
						<ToolbarSpacer />
						<!-- <Button icon="sap-icon://settings" /> <Button icon="sap-icon://drop-down-list" 
							/> -->
					</Toolbar>
				</headerToolbar>
				<content>
					<l:VerticalLayout width="100%">
						<Label text="FilterBar" />
						<fb:FilterBar reset="onReset" search="onSearch"
							showRestoreOnFB="true" showClearOnFB="true" showRestoreButton="true"
							showClearButton="true">
							<fb:filterItems>

								<fb:FilterItem name="A" label="Telefon">
									<fb:control>
										<Input type="Text" />
									</fb:control>
								</fb:FilterItem>

								<fb:FilterItem name="B" label="Fax">
									<fb:control>
										<Input type="Text" />
									</fb:control>
								</fb:FilterItem>

								<fb:FilterItem name="B" label="Adres email">
									<fb:control>
										<Input type="Text" />
									</fb:control>
								</fb:FilterItem>


							</fb:filterItems>
						</fb:FilterBar>
					</l:VerticalLayout>
				</content>
			</Panel>

			<Panel expandable="true" expanded="false">
				<headerToolbar>
					<Toolbar height="3rem">
						<Text text="Dane transakcyjne" />
						<ToolbarSpacer />
						<!-- <Button icon="sap-icon://settings" /> <Button icon="sap-icon://drop-down-list" 
							/> -->
					</Toolbar>
				</headerToolbar>
				<content>
					<l:VerticalLayout width="100%">
						<Label text="FilterBar" />
						<fb:FilterBar reset="onReset" search="onSearch"
							showRestoreOnFB="true" showClearOnFB="true" showRestoreButton="true"
							showClearButton="true">
							<fb:filterItems>

								<fb:FilterItem name="A" label="Numer dokumentu SD">
									<fb:control>
										<Input type="Text" />
									</fb:control>
								</fb:FilterItem>

								<fb:FilterItem name="B" label="Partia">
									<fb:control>
										<Input type="Text" />
									</fb:control>
								</fb:FilterItem>


							</fb:filterItems>
						</fb:FilterBar>
					</l:VerticalLayout>
				</content>
			</Panel>

			<Panel expandable="true" expanded="false">
				<headerToolbar>
					<Toolbar height="3rem">
						<Text text="Dane obszaru zbytu" />
						<ToolbarSpacer />
						<!-- <Button icon="sap-icon://settings" /> <Button icon="sap-icon://drop-down-list" 
							/> -->
					</Toolbar>
				</headerToolbar>
				<content>
					<l:VerticalLayout width="100%">
						<Label text="FilterBar" />
						<fb:FilterBar reset="onReset" search="onSearch"
							showRestoreOnFB="true" showClearOnFB="true" showRestoreButton="true"
							showClearButton="true">
							<fb:filterItems>

								<fb:FilterItem name="A" label="Dział sprzedaży">
									<fb:control>
										<Input type="Text" />
									</fb:control>
								</fb:FilterItem>

								<fb:FilterItem name="B" label="Kanał dystrybucji">
									<fb:control>
										<Input type="Text" />
									</fb:control>
								</fb:FilterItem>

								<fb:FilterItem name="A" label="Dziedzina">
									<fb:control>
										<Input type="Text" />
									</fb:control>
								</fb:FilterItem>

								<fb:FilterItem name="B" label="Rejon klienta">
									<fb:control>
										<Input type="Text" />
									</fb:control>
								</fb:FilterItem>
								<fb:FilterItem name="A" label="Biuro sprzedaży">
									<fb:control>
										<Input type="Text" />
									</fb:control>
								</fb:FilterItem>

								<fb:FilterItem name="B" label="Grupa sprzedawców">
									<fb:control>
										<Input type="Text" />
									</fb:control>
								</fb:FilterItem>

								<fb:FilterItem name="A" label="Grupa klientów">
									<fb:control>
										<Input type="Text" />
									</fb:control>
								</fb:FilterItem>

								<fb:FilterItem name="B" label="Typ cennika">
									<fb:control>
										<Input type="Text" />
									</fb:control>
								</fb:FilterItem>

								<fb:FilterItem name="A" label="Priorytet dostawy">
									<fb:control>
										<Input type="Text" />
									</fb:control>
								</fb:FilterItem>

								<fb:FilterItem name="B" label="Warunek wysyłki">
									<fb:control>
										<Input type="Text" />
									</fb:control>
								</fb:FilterItem>

								<fb:FilterItem name="A" label="Incoterms">
									<fb:control>
										<Input type="Text" />
									</fb:control>
								</fb:FilterItem>

								<fb:FilterItem name="B" label="Warunki płatności">
									<fb:control>
										<Input type="Text" />
									</fb:control>
								</fb:FilterItem>

								<fb:FilterItem name="B" label="Grupa dekretacji klienta">
									<fb:control>
										<Input type="Text" />
									</fb:control>
								</fb:FilterItem>

							</fb:filterItems>
						</fb:FilterBar>
					</l:VerticalLayout>
				</content>
			</Panel>

            <Panel expandable="true" expanded="false">
				<headerToolbar>
					<Toolbar height="3rem">
						<Text text="Dane dodatkowe" />
						<ToolbarSpacer />
						<!-- <Button icon="sap-icon://settings" /> <Button icon="sap-icon://drop-down-list" 
							/> -->
					</Toolbar>
				</headerToolbar>
				<content>
					<l:VerticalLayout width="100%">
						<Label text="FilterBar" />
						<fb:FilterBar reset="onReset" search="onSearch"
							showRestoreOnFB="true" showClearOnFB="true" showRestoreButton="true"
							showClearButton="true">
							<fb:filterItems>

								<fb:FilterItem name="A" label="Forma prawna">
									<fb:control>
										<Input type="Text" />
									</fb:control>
								</fb:FilterItem>

								<fb:FilterItem name="B" label="Branża">
									<fb:control>
										<Input type="Text" />
									</fb:control>
								</fb:FilterItem>

								<fb:FilterItem name="A" label="Klasyfikacja klienta">
									<fb:control>
										<Input type="Text" />
									</fb:control>
								</fb:FilterItem>

								<fb:FilterItem name="B" label="Atrybut 1">
									<fb:control>
										<Input type="Text" />
									</fb:control>
								</fb:FilterItem>

								<fb:FilterItem name="B" label="Atrybut 2">
									<fb:control>
										<Input type="Text" />
									</fb:control>
								</fb:FilterItem>


							</fb:filterItems>
						</fb:FilterBar>
					</l:VerticalLayout>
				</content>
			</Panel>


			<Table id="catalogTable" class="navTableControlLayout" items="{/ProductSet}"
				growing="true" growingScrollToLoad="true">
				<headerToolbar id="catalogTable_headerToolbar">
					<Toolbar id="tableToolbar">
						<Label id="catalogTitle" text="{viewProperties&gt;/catalogTitleText}"
							class="sapMH4FontSize" visible="{viewProperties&gt;/catalogTitleVisible}" />
						<ToolbarSpacer id="toolbarSpacer" />
						<SearchField id="searchField" showRefreshButton="false"
							placeholder="{i18n&gt;masterSearchPlaceholder}" tooltip="{i18n&gt;masterSearchTooltip}"
							search="onSearchPressed" width="{viewProperties&gt;/searchFieldWidth}" />
					</Toolbar>
				</headerToolbar>
				<columns id="catalogTable_columns">

					<Column id="catalogTable_col1" width="{viewProperties&gt;/availabilityColumnWidth}"
						hAlign="Left">
						<header id="catalogTable_col1_header">
							<Label id="catalogTable_col1_label" text="Weight unit" />
						</header>
					</Column>

					<Column id="catalogTable_col2" width="{viewProperties&gt;/availabilityColumnWidth}"
						hAlign="Left">
						<header id="catalogTable_col2_header">
							<Label id="catalogTable_col2_label" text="Catalog" />
						</header>
					</Column>

					<Column id="catalogTable_col3" width="10%" minScreenWidth="Tablet"
						demandPopin="true" hAlign="Right">
						<header id="catalogTable_col3_header">
							<Label id="catalogTable_col3_label" text="Gross Weight" />
						</header>
					</Column>

					<Column id="catalogTable_col4" width="{viewProperties&gt;/availabilityColumnWidth}"
						hAlign="Right">
						<header id="catalogTable_col4_header">
							<Label id="catalogTable_col4_label" text="Weight unit" />
						</header>
					</Column>
				</columns>

				<ColumnListItem id="columnListItem" vAlign="Middle"
					type="Navigation" press="onLineItemPressed" class="navTableItemLayout">
					<cells id="columnListItem_cells">
						<Text id="columnListItem_cell_1" text="{WeightUnit}"
							maxLines="2">
						</Text>
						<Text id="columnListItem_cell_2" text="{CatalogID}" maxLines="2">
						</Text>
						<ObjectNumber id="columnListItem_cell_3"
							number="{parts:[{path:'GrossWeight'}, {path:'CurrencyCode'}],          formatter: 'sap.ca.ui.model.format.AmountFormat.FormatAmountStandard'}"
							unit="{CurrencyCode}">
						</ObjectNumber>
						<ObjectStatus id="columnListItem_cell_4" text="{WeightUnit}"
							state="None">
						</ObjectStatus>
					</cells>
				</ColumnListItem>
			</Table>
		</content>
		<footer>
		</footer>
	</Page>
</core:View>